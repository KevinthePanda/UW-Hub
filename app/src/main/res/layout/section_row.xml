<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardElevation="2dp"
    android:foreground="?android:attr/selectableItemBackground">
    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:clickable="true"
        android:background="@color/bg_item_normal_state">
        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="LEC 001"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/instructor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Richard Ahmend Mantisranard"
            android:fontFamily="sans-serif-medium"
            android:layout_toRightOf="@id/section"
            android:gravity="right"
            android:paddingRight="8dp"
            android:layout_alignBaseline="@id/section"/>

        <TextView
            android:id="@+id/time_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Time"
            android:fontFamily="sans-serif-medium"
            android:paddingRight="8dp"
            android:layout_below="@id/section"
            android:layout_marginBottom="4dp"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="right"
            android:text="12:30 PM  - 2:50 PM MWF"
            android:fontFamily="sans-serif-medium"
            android:paddingRight="8dp"
            android:layout_below="@id/section"/>

        <TextView
            android:id="@+id/location_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="Location"
            android:fontFamily="sans-serif-medium"
            android:paddingRight="8dp"
            android:layout_below="@id/time_label"/>
        <TextView
            android:id="@+id/location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:gravity="right"
            android:text="DWE 1245 - UW CAMPUS"
            android:fontFamily="sans-serif-medium"
            android:paddingRight="8dp"
            android:layout_below="@id/time_label"/>

        <com.projects.kquicho.uwatm8.ExpandableItemIndicator
            android:id="@+id/indicator"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/location"/>
        <TextView
            android:id="@+id/expand_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/location"
            android:layout_marginTop="4dp"
            android:text="Section has varying times/locations. Expand to view "
            android:textSize="13sp"
            android:textStyle="italic"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@id/indicator"/>
        <ImageView
            android:id="@+id/enrollment_status"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:src="@drawable/enrollment_status_open"
            android:layout_toRightOf="@id/section"
            android:layout_alignParentTop="@id/section"
            android:layout_margin="4dp"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>