<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="8dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#888888"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <Button
            android:id="@+id/remove_widget"
            style="@style/Widget.AppCompat.Button.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="@string/remove"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="8dp">
        <TextView
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_sessions"
            android:background="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            android:textSize="24sp"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:fontFamily="sans-serif-medium"/>

        <RelativeLayout
            android:id="@+id/saved_company_1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/saved_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/saved_company_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_toLeftOf="@id/saved_date_1"/>
            <TextView
                android:id="@+id/saved_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/saved_company_1"
                android:textSize="15sp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/saved_location_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@id/saved_company_1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/saved_location_1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/saved_company_2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/saved_date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/saved_company_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_toLeftOf="@id/saved_date_2"/>
            <TextView
                android:id="@+id/saved_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/saved_company_2"
                android:textSize="15sp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/saved_location_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@id/saved_company_2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/saved_location_2"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/saved_company_3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/saved_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif"/>
            <TextView
                android:id="@+id/saved_company_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_toLeftOf="@id/saved_date_3"/>
            <TextView
                android:id="@+id/saved_time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/saved_company_3"
                android:textSize="15sp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/saved_location_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@id/saved_company_3"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/no_sessions_saved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="No info sessions saved"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_margin="16dp"
            android:background="@color/theme_primary_dark"/>
        <TextView
            android:id="@+id/no_sessions_exists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="sans-serif"
            android:text="No info sessions exist"/>

        <RelativeLayout
            android:id="@+id/company_1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/company_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_toLeftOf="@id/date_1"/>
            <TextView
                android:id="@+id/time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_1"
                android:textSize="15sp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/location_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@id/company_1"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/location_1"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/company_2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/company_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_toLeftOf="@id/date_2"/>
            <TextView
                android:id="@+id/time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_2"
                android:textSize="15sp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/location_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@id/company_2"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_below="@id/location_2"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/company_3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp">
            <TextView
                android:id="@+id/date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_alignParentRight="true"
                android:fontFamily="sans-serif"/>
            <TextView
                android:id="@+id/company_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:paddingRight="16dp"
                android:textStyle="bold"
                android:fontFamily="sans-serif"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_toLeftOf="@id/date_3"/>
            <TextView
                android:id="@+id/time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_3"
                android:textSize="15sp"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/location_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_below="@id/company_3"/>
        </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>