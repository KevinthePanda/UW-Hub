<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    card_view:cardElevation="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#E0E0E0"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">
        <ImageView
            android:id="@+id/remove_widget"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_close_circle"/>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:clickable="true"
        android:paddingBottom="8dp"
        android:background="#F5F5F5">
        <RelativeLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:layout_margin="8dp"
            android:paddingLeft="8dp">
            <ImageView
                android:id="@+id/ic_header"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_worker"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/header_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="8dp"
                android:text="@string/info_sessions"
                android:fontFamily="sans-serif-medium"
                android:layout_toRightOf="@id/ic_header"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/saved_company_1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/saved_date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignBottom="@+id/saved_row_1"/>

            <RelativeLayout
                android:id="@id/saved_row_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/saved_image_1"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/saved_company_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:layout_toRightOf="@id/saved_image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/saved_time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/saved_row_1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/saved_location_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/saved_row_1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/saved_company_2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:visibility="gone">
            <View
                android:id="@+id/saved_divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/saved_date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/saved_divider_2"/>

            <RelativeLayout
                android:id="@+id/saved_row_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/saved_divider_2">
                <ImageView
                    android:id="@+id/saved_image_2"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/saved_company_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:layout_toRightOf="@id/saved_image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/saved_time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/saved_row_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/saved_location_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/saved_row_2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/saved_company_3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:visibility="gone">
            <View
                android:id="@+id/saved_divider_3"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/saved_date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignParentRight="true"
                android:layout_below="@id/saved_divider_3"/>
            <RelativeLayout
                android:id="@+id/saved_row_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/saved_divider_3">
            <ImageView
                    android:id="@+id/saved_image_3"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_star"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/saved_company_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="16dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:layout_toRightOf="@id/saved_image"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"/>
            </RelativeLayout>
            <TextView
                android:id="@+id/saved_time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/saved_row_3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/saved_location_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/saved_row_3"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/no_sessions_saved"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:text="No info sessions saved"/>

        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="2dip"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="@color/theme_primary_dark"/>
        <TextView
            android:id="@+id/no_sessions_exists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:fontFamily="sans-serif-medium"
            android:text="@string/no_info_sessions_available"/>

        <RelativeLayout
            android:id="@+id/company_1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:visibility="gone">
            <TextView
                android:id="@+id/date_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignParentRight="true"/>

            <TextView
                android:id="@+id/company_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_toLeftOf="@id/date_1"/>
            <TextView
                android:id="@+id/time_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_1"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/location_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/company_1"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/company_2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:visibility="gone">
            <View
                android:id="@+id/divider_2"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
               android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/date_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/divider_2"/>

            <TextView
                android:id="@+id/company_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_toLeftOf="@id/date_2"
                android:layout_below="@id/divider_2"/>
            <TextView
                android:id="@+id/time_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/location_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/company_2"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/company_3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:visibility="gone">
            <View
                android:id="@+id/divider_3"
                android:layout_width="match_parent"
                android:layout_height="1dip"
                android:background="@color/gray"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/date_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/divider_3"/>
            <TextView
                android:id="@+id/company_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingRight="16dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:singleLine="true"
                android:ellipsize="end"
                android:gravity="left"
                android:layout_toLeftOf="@id/date_3"
                android:layout_below="@id/divider_3"/>
            <TextView
                android:id="@+id/time_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/company_3"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/location_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:layout_below="@id/company_3"/>
        </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/pbLoading"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#F5F5F5">
        <TextView
            android:id="@+id/loading_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/loading_widget"
            android:background="?attr/colorPrimary"
            android:layout_alignParentTop="true"
            android:layout_margin="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:fontFamily="sans-serif-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"/>
        <ProgressBar
            android:layout_below="@id/loading_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>